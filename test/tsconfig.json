{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "isolatedModules": false,
        "jsx": "react",
        "outDir": "./dist/",
        "sourceMap": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": true,
        "noImplicitAny": false,
        "noImplicitUseStrict": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": false
    },
    "files": [
        "typings/index.d.ts",
        "mockCrypto.ts",
        "testSerializeBinary.ts",
        "testAsyncSerialize.ts",
        "testMainWorker.ts",
        "testAll.ts"
    ],
    "compileOnSave": false,
    "buildOnSave": false
}
